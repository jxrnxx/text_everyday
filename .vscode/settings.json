{
    // typescript
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    // editor
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.stylelint": "explicit"
    },
    // eslint
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptraect",
        "vue"
    ],
    // stylelint
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss",
        "vue",
        "sass"
    ],
    "prettier.tabWidth": 4,
    // 关闭 LESS 内置语法检查（Panorama 使用非标准 CSS 属性会误报）
    "less.validate": false,
    // markdown 默认预览模式
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    }
}